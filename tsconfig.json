{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": false,
    "types": ["node"],
    "paths": {}
  },
  "exclude": [
    "dist",
    "webpack",
    "tslint.json",
    "**/test/*"
  ],
  "include": [
    "src/**/*",
    "dom.workaround.d.ts"
  ]
}
